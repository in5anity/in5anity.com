{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "comma-dangle": ["error", "never"],
        "max-len": [
            "error",
            {
                "code": 100,
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreUrls": true
            }
        ],
        "no-multiple-empty-lines": "error",
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "next": "*",
                "prev": [
                    "const",
                    "let"
                ]
            },
            {
                "blankLine": "always",
                "next": "return",
                "prev": "*"
            },
            {
                "blankLine": "any",
                "next": [
                    "const",
                    "let"
                ],
                "prev": [
                    "const",
                    "let"
                ]
            }
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}
